{
    "name": "acadea/php_dir_iterator",
    "description": "A simple PHP library to recursively find all files in a directory.",
    "keywords": [
        "acadea",
        "php_dir_iterator"
    ],
    "homepage": "https://github.com/acadea/php_dir_iterator",
    "license": "MIT",
    "authors": [
        {
            "name": "sam-ngu",
            "email": "opensource@acadea.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Acadea\\DirIterator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acadea\\DirIterator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
